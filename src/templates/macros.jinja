{# Provide some common macros that can be used on *any* jinja template,
regardless of type (css, html, etc) #}

{% macro include_inline(inc_page) %}
{% if do_render %}
		{# If we include content, we inherit the content's runtime deps #}
		{% do page_info.rtdeps.update(inc_page.rtdeps) %}
		{{ inc_page.content }}
{% endif %}
{% endmacro %}
